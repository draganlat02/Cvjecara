<Window x:Class="PrviProjekat.Views.PromjenaStatusaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{DynamicResource StatusChange_Title}"
        Width="360" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        FontFamily="{DynamicResource MainFont}"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <sys:String x:Key="Status_Pending">U obradi</sys:String>
        <sys:String x:Key="Status_Completed">Završeno</sys:String>
        <sys:String x:Key="Status_Canceled">Otkazano</sys:String>
    </Window.Resources>

    <Border CornerRadius="12"
            Background="{DynamicResource PanelBackground}"
            BorderBrush="#D0D0D0"
            BorderThickness="1"
            Padding="20">
        <StackPanel>

            <!-- NASLOV -->
            <TextBlock Text="{DynamicResource StatusChange_Header}"
                       FontSize="16" FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,15"/>

            <!-- LABEL -->
            <TextBlock Text="{DynamicResource StatusChange_Label}"
                       FontSize="13"
                       Foreground="{DynamicResource TextBrush}"
                       Opacity="0.8"
                       Margin="0,0,0,8"/>

            <!-- COMBOBOX -->
            <ComboBox x:Name="StatusComboBox"
                      Height="32" FontSize="13"
                      Background="{DynamicResource PanelBackground}"
                      BorderBrush="#DADADA"
                      Margin="0,0,0,20"
                      SelectedIndex="1">
                <ComboBoxItem Content="{StaticResource Status_Pending}"/>
                <ComboBoxItem Content="{StaticResource Status_Completed}"/>
                <ComboBoxItem Content="{StaticResource Status_Canceled}"/>
            </ComboBox>

            <!-- DUGMAD -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                <!-- ODUSTANI -->
                <Button Content="{DynamicResource StatusChange_CancelBtn}"
                        Width="90" Height="32"
                        Margin="0,0,10,0"
                        Background="#BDC3C7"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Odustani_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A0A6AA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- SAČUVAJ -->
                <Button Content="{DynamicResource StatusChange_SaveBtn}"
                        Width="90" Height="32"
                        Background="{DynamicResource SuccessBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Sacuvaj_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SuccessHover}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </StackPanel>
    </Border>
</Window>