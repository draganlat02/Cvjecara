<Window x:Class="PrviProjekat.Views.UrediProizvodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{DynamicResource EditProducts_Title}"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        FontFamily="{DynamicResource MainFont}">

    <Window.Resources>
        <sys:String x:Key="EditProducts_FormTitle_Edit">Uredi proizvod</sys:String>
        <sys:String x:Key="EditProducts_FormTitle_Add">Dodaj novi proizvod</sys:String>
        
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- FORMA ZA UREĐIVANJE / DODAVANJE -->
        <Border Background="{DynamicResource PanelBackground}"
                CornerRadius="10"
                Padding="15"
                Margin="5"
                BorderBrush="#DDD"
                BorderThickness="1">
            <StackPanel>
                <TextBlock x:Name="TitleTextBlock"
                           Text="{DynamicResource EditProducts_FormTitle_Edit}"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,15"/>

                <TextBlock Text="{DynamicResource EditProducts_Label_Name}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <TextBox x:Name="NazivTextBox" Height="28" Margin="0,3,0,10"
                         Background="{DynamicResource PanelBackground}"
                         BorderBrush="#C6C6C6"/>

                <TextBlock Text="{DynamicResource EditProducts_Label_Price}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <TextBox x:Name="CijenaTextBox" Height="28" Margin="0,3,0,10"
                         Background="{DynamicResource PanelBackground}"
                         BorderBrush="#C6C6C6"/>

                <TextBlock Text="{DynamicResource EditProducts_Label_Code}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <TextBox x:Name="SifraTextBox" Height="28" Margin="0,3,0,10"
                         Background="{DynamicResource PanelBackground}"
                         BorderBrush="#C6C6C6"/>

                <TextBlock Text="{DynamicResource EditProducts_Label_Description}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <TextBox x:Name="OpisTextBox"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,3,0,10"
                         Background="{DynamicResource PanelBackground}"
                         BorderBrush="#C6C6C6"/>

                <TextBlock Text="{DynamicResource EditProducts_Label_Category}" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}"/>
                <ComboBox x:Name="KategorijaComboBox" Height="28" Margin="0,3,0,15"
                          Background="{DynamicResource PanelBackground}"
                          BorderBrush="#C6C6C6"/>

                <!-- DUGMAD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- SAČUVAJ -->
                    <Button x:Name="SaveButton" Content="{DynamicResource EditProducts_Button_Save}"
                            Click="SaveButton_Click"
                            Width="100" Height="36"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentHover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- OBRIŠI -->
                    <Button Content="{DynamicResource EditProducts_Button_Delete}"
                            Click="DeleteButton_Click"
                            Width="100" Height="36"
                            Background="{DynamicResource DangerBrush}"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource DangerHover}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- LISTA PROIZVODA -->
        <Border Grid.Column="1"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="10"
                Padding="10"
                Margin="5"
                BorderBrush="#DDD"
                BorderThickness="1">
            <DataGrid x:Name="ProizvodiGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      MouseDoubleClick="ProizvodiGrid_MouseDoubleClick"
                      Background="Transparent"
                      BorderThickness="0"
                      RowHeight="45">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_ID}" Binding="{Binding Id}" Width="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_Name}" Binding="{Binding Naziv}" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="10,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_Price}" Binding="{Binding Cijena}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_Code}" Binding="{Binding Sifra}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_Description}" Binding="{Binding Opis}" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="10,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="{DynamicResource EditProducts_Column_Category}" Binding="{Binding Kategorija.Naziv}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>