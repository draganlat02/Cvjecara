<Window x:Class="PrviProjekat.Views.NarudzbaDetaljiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{DynamicResource OrderDetails_Title}"
        Height="720" Width="820"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        FontFamily="{DynamicResource MainFont}">

    <!-- LOKALNI STATUSI + FallbackValue -->
    <Window.Resources>
        <sys:String x:Key="Status_Pending">U obradi</sys:String>
        <sys:String x:Key="Status_Completed">Završeno</sys:String>
        <sys:String x:Key="Status_Canceled">Otkazano</sys:String>
        <sys:String x:Key="OrderDetails_NoNote">Nema napomene</sys:String> <!-- DODATO -->
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MaxHeight="80"/>
        </Grid.RowDefinitions>

        <!-- NASLOV -->
        <TextBlock Text="{DynamicResource OrderDetails_Header}"
                   FontSize="28" FontWeight="SemiBold"
                   Foreground="{DynamicResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- INFO KARTICA -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="16"
                Padding="25"
                Margin="0,0,0,25"
                BorderBrush="#E1E8ED"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- KUPAC -->
                <TextBlock Grid.Column="0" Grid.Row="0" Text="{DynamicResource OrderDetails_Customer}"
                           FontWeight="Medium" Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7" FontSize="15"/>
                <TextBlock Grid.Column="1" Grid.Row="0"
                           Text="{Binding ImeKupca}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           FontSize="15" Margin="20,0,0,0"/>

                <!-- DATUM -->
                <TextBlock Grid.Column="0" Grid.Row="1" Text="{DynamicResource OrderDetails_Date}"
                           FontWeight="Medium" Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7" Margin="0,12,0,0" FontSize="15"/>
                <TextBlock Grid.Column="1" Grid.Row="1"
                           Text="{Binding Datum, StringFormat=dd.MM.yyyy HH:mm}"
                           Foreground="{DynamicResource TextBrush}"
                           Margin="20,12,0,0" FontSize="15"/>

                <!-- STATUS -->
                <TextBlock Grid.Column="0" Grid.Row="2" Text="{DynamicResource OrderDetails_Status}"
                           FontWeight="Medium" Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7" Margin="0,12,0,0" FontSize="15"/>
                <TextBlock Grid.Column="1" Grid.Row="2"
                           Text="{Binding Status}"
                           Margin="20,12,0,0" FontSize="15" FontWeight="SemiBold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#F39C12"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="{StaticResource Status_Completed}">
                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="{StaticResource Status_Canceled}">
                                    <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- STAVKE NARUDŽBE -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="16"
                BorderBrush="#E1E8ED"
                BorderThickness="1"
                Margin="0,0,0,20">
            <DataGrid ItemsSource="{Binding Stavke}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      Background="Transparent"
                      BorderThickness="0"
                      RowHeight="50"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource OrderDetails_Product}"
                                        Binding="{Binding NazivProizvoda}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="15,0,0,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{DynamicResource OrderDetails_Quantity}"
                                        Binding="{Binding Kolicina}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{DynamicResource OrderDetails_Price}"
                                        Binding="{Binding Cijena, StringFormat={}{0:F2} KM}" Width="130">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,20,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{DynamicResource OrderDetails_Total}"
                                        Binding="{Binding Ukupno, StringFormat={}{0:F2} KM}" Width="140">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,20,0"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- DUGMAD (samo za U obradi) -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="{StaticResource Status_Pending}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Button Content="{DynamicResource OrderDetails_CompleteBtn}"
                    Click="SetStatusZavrseno_Click"
                    Background="{DynamicResource SuccessBrush}"
                    Foreground="White"
                    Padding="18,10"
                    Margin="0,0,10,0"
                    FontWeight="Medium" FontSize="13" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SuccessHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="{DynamicResource OrderDetails_CancelBtn}"
                    Click="SetStatusOtkazano_Click"
                    Background="{DynamicResource DangerBrush}"
                    Foreground="White"
                    Padding="18,10"
                    FontWeight="Medium" FontSize="13" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource DangerHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- ZAVRŠENO -->
        <Border Grid.Row="2"
                Background="{DynamicResource SuccessBrush}"
                CornerRadius="10"
                Padding="18,10"
                HorizontalAlignment="Right"
                Margin="0,0,0,10">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="{StaticResource Status_Completed}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{DynamicResource OrderDetails_CompletedMsg}"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"/>
        </Border>

        <!-- OTKAZANO -->
        <Border Grid.Row="2"
                Background="{DynamicResource DangerBrush}"
                CornerRadius="10"
                Padding="18,10"
                HorizontalAlignment="Right"
                Margin="0,0,0,10">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="{StaticResource Status_Canceled}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock Text="{DynamicResource OrderDetails_CanceledMsg}"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"/>
        </Border>

        <!-- UKUPNO – ISPRAVLJEN EventTrigger -->
        <Border x:Name="UkupnoBorder"
                Grid.Row="3"
                Background="{DynamicResource SuccessBrush}"
                CornerRadius="12"
                Padding="22,14"
                HorizontalAlignment="Right"
                Margin="0,0,0,15">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="1.0"/>
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.9" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1.0" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource OrderDetails_TotalLabel}"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="18"
                           Margin="0,0,12,0"/>
                <TextBlock Text="{Binding Ukupno, StringFormat={}{0:F2} KM}"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="22"/>
            </StackPanel>
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.12" BlurRadius="12" ShadowDepth="2"/>
            </Border.Effect>
        </Border>

        <!-- NAPOMENA – ISPRAVLJEN FallbackValue -->
        <Border Grid.Row="4"
                Background="{DynamicResource PanelBackground}"
                CornerRadius="12"
                Padding="16"
                Margin="0,0,0,10"
                BorderBrush="#E1E8ED"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="80">
                <StackPanel>
                    <TextBlock Text="{DynamicResource OrderDetails_NoteLabel}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.7"
                               FontSize="14"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="{Binding Napomena, FallbackValue={StaticResource OrderDetails_NoNote}}"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               FontSize="15"
                               LineHeight="20">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Napomena}" Value="{x:Null}">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Napomena}" Value="">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>