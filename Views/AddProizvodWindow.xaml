<Window x:Class="PrviProjekat.Views.AddProizvodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddProduct_Title}"
        Height="500"
        Width="380"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        FontFamily="{DynamicResource MainFont}">

    <Border CornerRadius="12"
            Background="{DynamicResource PanelBackground}"
            Padding="20"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Top">
            <StackPanel.Resources>
                <!-- STILOVI ZA TextBox i ComboBox -->
                <Style TargetType="TextBox">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="Height" Value="28"/>
                    <Setter Property="Margin" Value="0,3,0,10"/>
                    <Setter Property="Padding" Value="5,0,0,0"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                </Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="Height" Value="28"/>
                    <Setter Property="Margin" Value="0,3,0,0"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                    <Setter Property="Background" Value="{DynamicResource PanelBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                </Style>
            </StackPanel.Resources>

            <!-- NASLOV -->
            <TextBlock Text="{DynamicResource AddProduct_Header}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextBrush}"/>

            <!-- NAZIV -->
            <TextBlock Text="{DynamicResource AddProduct_Name}" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="NazivTextBox"/>

            <!-- CIJENA -->
            <TextBlock Text="{DynamicResource AddProduct_Price}" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="CijenaTextBox"/>

            <!-- ŠIFRA -->
            <TextBlock Text="{DynamicResource AddProduct_Code}" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="SifraTextBox"/>

            <!-- OPIS -->
            <TextBlock Text="{DynamicResource AddProduct_Description}" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBox x:Name="OpisTextBox"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top"
                     Margin="0,3,0,10"/>

            <!-- KATEGORIJA -->
            <TextBlock Text="{DynamicResource AddProduct_Category}" 
                       FontWeight="SemiBold" 
                       Foreground="{DynamicResource TextBrush}"/>
            <ComboBox x:Name="KategorijaComboBox"
                      DisplayMemberPath="Naziv"
                      SelectedValuePath="idKATEGORIJA"
                      SelectedIndex="0"/>

            <!-- DUGME SAČUVAJ -->
            <Button Content="{DynamicResource Btn_Save}"
                    Click="Sacuvaj_Click"
                    Width="120" Height="36"
                    HorizontalAlignment="Center"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,15,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>