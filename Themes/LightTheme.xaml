<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- POZADINA -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="PanelBackground" Color="White"/>
    <SolidColorBrush x:Key="TextBrush" Color="#2C3E50"/>

    <!-- DUGMAD -->
    <SolidColorBrush x:Key="AccentBrush"   Color="#4A90E2"/>
    <!-- plava -->
    <SolidColorBrush x:Key="SuccessBrush"  Color="#27AE60"/>
    <!-- zelena -->
    <SolidColorBrush x:Key="DangerBrush"   Color="#E74C3C"/>
    <!-- crvena -->
    <SolidColorBrush x:Key="EmployeeBrush" Color="#6D28D9"/>
    <!-- ljubičasto -->

    <!-- HOVER -->
    <SolidColorBrush x:Key="AccentHover"   Color="#357ABD"/>
    <SolidColorBrush x:Key="SuccessHover"  Color="#219653"/>
    <SolidColorBrush x:Key="DangerHover"   Color="#C0392B"/>

    <SolidColorBrush x:Key="EmployeeHover" Color="#5B1EA8"/>
    <!-- Tamnije ljubičasto -->


    <!-- Za LightTheme.xaml -->
    <Color x:Key="BorderColor">#E5E7EB</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <Color x:Key="LightBackgroundColor">#F8FAFC</Color>
    <SolidColorBrush x:Key="LightBackground" Color="{DynamicResource LightBackgroundColor}"/>

  
    <FontFamily x:Key="MainFont">Segoe UI</FontFamily>
</ResourceDictionary>