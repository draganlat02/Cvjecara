<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- POZADINA -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FDF2F8"/>
    <SolidColorBrush x:Key="PanelBackground" Color="White"/>
    <SolidColorBrush x:Key="TextBrush" Color="#4A148C"/>

    <!-- DUGMAD -->
    <SolidColorBrush x:Key="AccentBrush"   Color="#EC4899"/>
    <!-- jarka roza -->
    <SolidColorBrush x:Key="SuccessBrush"  Color="#27AE60"/>
    <!-- baby rose -->
    <SolidColorBrush x:Key="DangerBrush"   Color="#C0392B"/>
    <!-- slabo crveno -->
    <SolidColorBrush x:Key="EmployeeBrush" Color="#FDB8D0"/>
    <!-- svijetlo rozikasto -->

    <!-- HOVER -->
    <SolidColorBrush x:Key="AccentHover"   Color="#DB2777"/>
    <SolidColorBrush x:Key="SuccessHover"  Color="#219653"/>
    <SolidColorBrush x:Key="DangerHover"   Color="#F87171"/>
    <SolidColorBrush x:Key="EmployeeHover" Color="#D81B60"/>
    <!-- Tamnije ljubičasto -->


    <!-- Za PinkTheme.xaml -->
    <Color x:Key="BorderColor">#FBCFE8</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <Color x:Key="LightBackgroundColor">#FDF2F8</Color>
    <SolidColorBrush x:Key="LightBackground" Color="{DynamicResource LightBackgroundColor}"/>

    
    

    <FontFamily x:Key="MainFont">Segoe UI</FontFamily>
</ResourceDictionary>